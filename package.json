{
  "name": "@bryan-hoang/eslint-config",
  "version": "0.0.0-development",
  "private": true,
  "description": "This is my ESLint Shareable Config which builds off of the Airbnb JavaScript Style Guide by adding additional ESLint configs and plugins that I find useful.",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config"
  ],
  "homepage": "https://github.com/bryan-hoang/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/bryan-hoang/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bryan-hoang/eslint-config.git"
  },
  "license": "MIT",
  "author": "Bryan Hoang",
  "main": "index.js",
  "files": [
    "dist",
    "index.js"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:watch": "tsc -w",
    "check:spelling": "cspell \"**/*.{md,ts,js}\"",
    "check:types": "lerna run typecheck",
    "clean": "lerna clean",
    "format": "prettier -c .",
    "postinstall": "npm run lerna:init && npm run build",
    "lerna:init": "lerna bootstrap --ignore-scripts --no-ci && lerna link --force-local",
    "lint": "eslint --cache --ext ts,tsx,js .",
    "lint:markdown": "markdownlint .",
    "lint:watch": "esw -w  --cache --ext ts,tsx,js",
    "semantic-release": "lerna exec --concurrency 1 -- semantic-release -e semantic-release-monorepo"
  },
  "dependencies": {
    "@bryan-hoang/eslint-config-base": "file:packages/base",
    "@bryan-hoang/eslint-config-react": "file:packages/react",
    "@bryan-hoang/eslint-config-typescript": "file:packages/typescript"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@tsconfig/node14": "1.0.0",
    "@types/eslint": "7.2.6",
    "@typescript-eslint/parser": "4.15.0",
    "cspell": "5.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.20.0",
    "eslint-watch": "7.0.0",
    "husky": "4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "10.5.4",
    "markdownlint-cli": "0.26.0",
    "npm": "7.5.4",
    "prettier": "2.2.1",
    "prettier-plugin-packagejson": "2.2.9",
    "prettier-plugin-sort-json": "0.0.2",
    "semantic-release": "17.3.9",
    "semantic-release-monorepo": "7.0.4",
    "typescript": "4.1.5"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.0.0"
  }
}
